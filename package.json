{
  "name": "weekly-newsletter-email",
  "version": "1.0.0",
  "description": "Weekly Newsletter Emails built with Serverless, OAuth2 and Gmail.",
  "main": "serverless.ts",
  "scripts": {
    "start": "serverless offline --disableCookieValidation --httpPort=4000 --stage local",
    "deploy": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "test": "TZ=UTC jest --passWithNoTests --runInBand --logHeapUsage --detectOpenHandles",
    "test:watch": "TZ=UTC jest --watch --coverage --runInBand",
    "lint": "eslint '*/**/*.{js,ts}'",
    "prettier": "prettier --write '*/**/*.{js,ts}'",
    "bootstrap": "rm -rf node_modules && yarn install"
  },
  "dependencies": {
    "@middy/core": "^1.5.0",
    "@middy/http-json-body-parser": "^1.5.0",
    "aws-sdk": "^2.903.0",
    "date-fns": "^2.23.0",
    "googleapis": "^126.0.1",
    "mongoose": "^5.12.7",
    "source-map-support": "^0.5.19",
    "sqs-extended-client": "^0.0.3",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@serverless/typescript": "^3.30.1",
    "@types/aws-lambda": "^8.10.64",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.4",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "fork-ts-checker-webpack-plugin": "^6.0.0",
    "husky": "4.3.7",
    "jest": "^29.7.0",
    "json-schema-to-ts": "^1.4.1",
    "lint-staged": "^10.5.3",
    "mongodb-memory-server": "^8.15.1",
    "nock": "^13.1.1",
    "prettier": "^2.2.1",
    "serverless": "^3.35.2",
    "serverless-domain-manager": "^7.1.2",
    "serverless-offline": "^13.0.0",
    "serverless-prune-plugin": "^2.0.1",
    "serverless-stage-manager": "^1.0.5",
    "serverless-webpack": "^5.13.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^8.0.10",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^5.2.2",
    "webpack": "^5.4.0",
    "webpack-node-externals": "^2.5.2"
  },
  "author": "André Brandão <andrenbrandao@gmail.com>",
  "license": "MIT"
}
